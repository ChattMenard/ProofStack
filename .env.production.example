# ProofStack Production Environment Variables
# Copy this file to .env.production and fill in all required values before deployment.
# NEVER commit this file with real secrets to git.

# ============================================
# REQUIRED - Core Application
# ============================================

# Supabase (https://app.supabase.com)
# Get from Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key...
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key...

# Application URL (must match your production domain)
NEXT_PUBLIC_APP_URL=https://app.yourdomain.com
NEXT_PUBLIC_SITE_URL=https://app.yourdomain.com

# ============================================
# REQUIRED - Payment Processing
# ============================================

# Stripe (https://dashboard.stripe.com)
# Get production keys from Stripe dashboard (NOT test keys!)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# REQUIRED - AI & Analysis
# ============================================

# OpenAI API (https://platform.openai.com)
OPENAI_API_KEY=sk-proj-...

# ============================================
# REQUIRED - File Storage
# ============================================

# Cloudinary (https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=1234567890
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# REQUIRED - Authentication
# ============================================

# GitHub OAuth (https://github.com/settings/developers)
# Create OAuth app and get from Settings > OAuth Apps
GITHUB_CLIENT_ID=Iv1.xxxxx
GITHUB_CLIENT_SECRET=your-client-secret

# ============================================
# REQUIRED - Security & Cron
# ============================================

# Cron job secret (generate: openssl rand -base64 32 or use a strong random string)
CRON_SECRET=your-random-secret-here

# ============================================
# OPTIONAL - Email Notifications
# ============================================

# Resend Email (https://resend.com)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL="ProofStack <notifications@yourdomain.com>"

# ============================================
# OPTIONAL - Rate Limiting (Recommended for production)
# ============================================

# Upstash Redis (https://console.upstash.com)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# OPTIONAL - Monitoring & Analytics
# ============================================

# Sentry (https://sentry.io)
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# PostHog (https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# OPTIONAL - Additional Auth Providers
# ============================================

# LinkedIn OAuth (https://www.linkedin.com/developers)
# LINKEDIN_CLIENT_ID=your-client-id
# LINKEDIN_CLIENT_SECRET=your-client-secret

# ============================================
# Environment Indicator (DO NOT CHANGE)
# ============================================
NODE_ENV=production
