# ============================================
# REQUIRED - Core Application
# ============================================

# Supabase (https://app.supabase.com)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# REQUIRED - Payment Processing
# ============================================

# Stripe (https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================
# REQUIRED - AI & Analysis
# ============================================

# OpenAI API (https://platform.openai.com)
OPENAI_API_KEY=sk-proj-...

# ============================================
# REQUIRED - File Storage
# ============================================

# Cloudinary (https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# OPTIONAL - Rate Limiting (Recommended)
# ============================================

# Upstash Redis (https://console.upstash.com)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# OPTIONAL - Email Notifications
# ============================================

# Resend Email (https://resend.com)
RESEND_API_KEY=re_...

# ============================================
# OPTIONAL - Monitoring & Analytics
# ============================================

# Sentry (https://sentry.io)
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_ORG=proofstack
SENTRY_PROJECT=proofstack
SENTRY_AUTH_TOKEN=your-auth-token

# PostHog (https://posthog.com)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# OPTIONAL - OAuth Providers
# ============================================

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-client-id
GITHUB_CLIENT_SECRET=your-client-secret

# LinkedIn OAuth (https://www.linkedin.com/developers)
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# ============================================
# OPTIONAL - Security
# ============================================

# Cron Job Secret (generate: openssl rand -base64 32)
CRON_SECRET=your-random-secret

# ============================================
# DEVELOPMENT ONLY - Not Needed for Production
# ============================================

# Node Environment (Vercel sets this automatically)
NODE_ENV=development
